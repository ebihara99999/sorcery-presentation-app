<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Crypted password</th>
    <th>Salt</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <% if user.type == 'GeneralUser' %>
            <td><%= link_to 'Show', general_user_url(user.id) %></td>
            <td><%= link_to 'Edit', edit_general_user_url(user) %></td>
            <td><%= link_to 'Destroy', general_user_url(user.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% else %>
            <td><%= link_to 'Show', admin_url(user.id) %></td>
            <td><%= link_to 'Edit', edit_admin_url(user) %></td>
            <td><%= link_to 'Destroy', admin_url(user.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New General User', new_general_user_url %>
<%= link_to 'New Admin User', new_admin_url %>
